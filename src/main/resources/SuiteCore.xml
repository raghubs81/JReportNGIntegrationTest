<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="SuiteCore" parallel="false" preserve-order="true" time-out="5000">

  <test name="Basic" preserve-order="true">
    <classes>      
      <class name="com.maga.jreportnginteg.basic.HelloWorldTest"/>
      <class name="com.maga.jreportnginteg.basic.BasicFailureTest"/>
      <class name="com.maga.jreportnginteg.basic.BeforeClassFailureTest"/>
      <class name="com.maga.jreportnginteg.basic.AfterClassFailureTest"/>
    </classes>
  </test>

  <test name="LoggerType" preserve-order="true">
    <classes>      
      <class name="com.maga.jreportnginteg.loggertype.InstanceLoggerTest"/>
      <class name="com.maga.jreportnginteg.loggertype.StaticLoggerInjectionTest"/>
      <class name="com.maga.jreportnginteg.loggertype.LoggerFactoryTest"/>            
    </classes>
  </test>

  <test name="Misc" preserve-order="true">
    <classes>
      <class name="com.maga.jreportnginteg.misc.LogLevelTest"/>
    </classes>
  </test>

</suite>